<%- if controller_name != 'sessions' %>
  <div class="text-center mt-2">
    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-outline-primary btn-sm' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="text-center mt-2">
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-success btn-sm' %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="text-center mt-2">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-outline-secondary btn-sm' %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="text-center mt-2">
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'btn btn-outline-info btn-sm' %>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="text-center mt-2">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-outline-warning btn-sm' %>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="mt-3">
    <h5 class="text-center">Sign in with</h5>
    <div class="d-flex justify-content-center">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-outline-dark mx-1", data: { turbo: false } %>
      <% end %>
    </div>
  </div>
<% end %>
