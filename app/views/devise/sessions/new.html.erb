<div class="container mt-5">
  <h1 class="mb-5 text-center display-6">Log in</h1>

  <div class="row">
    <!-- Coluna do Formulário -->
    <div class="col-md-4">
      <%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true, class: 'needs-validation', novalidate: true) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger mb-4">
            <h4><%= pluralize(resource.errors.count, "erro") %> impediram o login:</h4>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="card p-5 shadow-lg border-0 rounded-3">
          <!-- Email -->
          <div class="mb-3">
            <%= f.label :email, class: 'form-label fw-bold' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Digite seu e-mail', required: true %>
          </div>

          <!-- Senha -->
          <div class="mb-3">
            <%= f.label :password, class: 'form-label fw-bold' %>
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Digite sua senha', required: true %>
          </div>

          <!-- Lembrar-me -->
          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <!-- Botões -->
          <div class="d-flex justify-content-between align-items-center mt-3">
            <%= f.submit "Acessar", class: 'btn btn-primary btn-lg w-100' %>
          </div>
          
          <!-- Links de Ação -->
          <div class="d-flex justify-content-between mt-3">
            <%= link_to 'Esqueceu a senha?', new_user_password_path, class: 'btn btn-link text-muted btn-sm' %>
            <%= link_to "Criar conta", new_registration_path(resource_name), class: 'btn btn-link text-muted btn-sm' %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Coluna da Imagem -->
    <div class="col-md-8">
      <img src="https://images.unsplash.com/photo-1542744173-05336fcc7ad4?q=80&w=1702&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagem de INSS" class="img-fluid rounded-3 shadow-lg">
    </div>
  </div>
</div>
