<div class="container mt-5">
  <h1 class="mb-5 text-center display-6">Forgot your password?</h1>

  <div class="row">
    <!-- Coluna do Formulário -->
    <div class="col-md-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger mb-4">
            <h4><%= pluralize(resource.errors.count, "erro") %> impediram o envio:</h4>
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="card p-5 shadow-lg border-0 rounded-3">
          <!-- Campo de E-mail -->
          <div class="mb-4">
            <%= f.label :email, class: 'form-label fw-bold' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Digite seu e-mail', required: true %>
          </div>

          <!-- Botão de Submissão -->
          <div class="d-grid gap-2">
            <%= f.submit "Redefinir a senha", class: 'btn btn-primary btn-lg' %>
          </div>

          <!-- Links de Ação -->
          <div class="d-flex justify-content-between mt-3">
            <%= link_to 'Voltar para o login', new_session_path(resource_name), class: 'btn btn-link text-muted btn-sm' %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Coluna da Imagem -->
    <div class="col-md-8">
      <img src="https://images.unsplash.com/photo-1542744173-05336fcc7ad4?q=80&w=1702&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Imagem de INSS" class="img-fluid rounded-3 shadow-lg">
    </div>
  </div>
</div>
