<div class="container mt-5">
  <h1 class="mb-4 text-center display-6">Lista de Proponentes</h1>

  <div class="d-flex justify-content-start mb-3">
    <%= link_to 'Novo Proponente', new_proponente_path, class: 'btn btn-primary me-2' %>
    <%= link_to 'Relatório', relatorio_proponentes_path, class: 'btn btn-info' %>
  </div>

  <div class="card shadow-lg border-0 rounded-3 p-4">
    <table class="table table-striped">
      <thead class="table-light">
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">CPF</th>
          <th scope="col">Salário</th>
          <th scope="col">Desconto INSS</th>
          <th scope="col" class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @proponentes.each do |proponente| %>
          <tr>
            <td><%= proponente.nome %></td>
            <td><%= proponente.cpf %></td>
            <td><%= number_to_currency(proponente.salario) %></td>
            <td><%= number_to_currency(proponente.desconto_inss) %></td>
            <td class="text-center">
              <%= link_to 'Ver', proponente, class: 'btn btn-sm btn-outline-primary me-1' %>
              <%= link_to 'Editar', edit_proponente_path(proponente), class: 'btn btn-sm btn-outline-secondary me-1' %>
              <%= button_to 'Excluir', proponente, method: :delete, 
                  data: { turbo_confirm: 'Tem certeza que deseja excluir este proponente?' }, 
                  class: 'btn btn-sm btn-outline-danger', 
                  form: { class: 'd-inline' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @proponentes.empty? %>
    <div class="alert alert-info mt-3">Nenhum proponente encontrado.</div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @proponentes %>
  </div>
</div>